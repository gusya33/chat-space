.main-chat
  .main-chat__head
    %ul.main-chat__head__box
      = @group.name
      %li.main-chat__head__box__user
        Menber:
        = current_user.name
    .main-chat__head__right
      = link_to edit_group_path(current_user), class: "main-chat__head__right" do
        Edit
  .main-chat__member
    = render @messages
  .from
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: "input-box__text", placeholder: 'type a message'
        = f.label :image, class: "input-box__image" do
          = icon('fas', 'image')
          = f.file_field :image, class: "input-box__image__file"
        = f.submit 'Send', class: "submit-btn"